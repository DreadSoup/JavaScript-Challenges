const calcAverage = (scoreOne, scoreTwo, scoreThree) => (scoreOne + scoreTwo + scoreThree) / 3;

let dolphinAverage = calcAverage(44, 23, 71);
let koalaAverage = calcAverage(65, 54, 49);

// also works -> version // const checkWinner = (avgDolphins, avgKoalas) => {}
const checkWinner = function (avgDolphins, avgKoalas) {
    if (avgDolphins >= 2 * avgKoalas) {
        console.log(`Dolphins Win (${dolphinAverage} vs. ${koalaAverage})`);
    } else if (avgKoalas >= 2 * avgDolphins) {
        console.log(`Koalas Win (${koalaAverage} vs. ${dolphinAverage})`);
    } else {
        console.log(`Close but no cigar!`);
    }
}

console.log(dolphinAverage);
console.log(koalaAverage);
checkWinner(dolphinAverage, koalaAverage);


